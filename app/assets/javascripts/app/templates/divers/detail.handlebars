<div class="hero-unit">
	<h1>{{diver.fullname}}</h1>
	{{#if isEditing}}
		<div class="field">
			{{view Ember.TextField valueBinding="diver.firstname"  placeholder="First Name" size="30"}}
		</div>
		<div class="field">
			{{view Ember.TextField valueBinding="diver.lastname"  placeholder="Last Name" size="30"}}
		</div>
		<div class="field">
			{{view Ember.TextField valueBinding="diver.email" placeholder="Email" size="30" type="email"}}
		</div>
	{{else}}
		<p>{{diver.firstname}}</p>
		<p>{{diver.lastname}}</p> 
		<p>{{diver.email}}</p>
	{{/if}}

	<hr />
	<dl class="dl-horizontal">
		<dt>Id</dt>
        <dd>{{diver.id}}</dd>
        <dt>Club de plongée</dt>
        <dd>{{diver.dive_club_id}}</dd>
        <dt>Niveau</dt>
        <dd>{{diver.ffessm_level_id}}</dd>
        <dt>N° licence</dt>
        <dd>{{diver.ffessm_licence_number}}&nbsp;</dd>
        <dt>Certificat médical</dt>
        <dd> {{diver.medical_certificate_expires_on}}&nbsp;</dd>
		<dt>Créé le</dt>
        <dd>{{diver.created_at}}</dd>
		<dt>Modifié le</dt>
        <dd>{{diver.updated_at}}</dd>
    </dl>
</div>
<div class="actions"> 
	{{#if isEditing}}
		<button class="btn" type="button" {{action "destroy"}}>Annuler</button>
		<button class="btn btn-success" type="submit">Enregistrer</button>
	{{else}}
		<button class="btn btn-danger" type="button" {{action "destroy" target="JustDive.Controllers.AddressBook" context="diver"}}>Supprimer</button>
		<button class="btn btn-primary" type="button" {{action "edit" target="JustDive.Controllers.AddressBook" context="diver"}}>Modifier</button>
	{{/if}}
</div>
