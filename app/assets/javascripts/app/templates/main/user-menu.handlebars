{{#if JustDive.identity.is_logged_in}}
	<div class="btn-group pull-right">
		<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			<i class="icon-user"></i> {{JustDive.identity.email}}
			<span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			<li><a href="#!club-admin"><i class="icon-cog"></i> Configuration du club</a>
			<li class="divider"></li>
			{{#if JustDive.monitor.is_online}}
				<li><a href="#" {{action "syncGoogle" target="JustDive.Controllers.Routed.Diver"}}><i class="icon-refresh"></i> Synchroniser depuis Google</a></li>
				<li><a href="#" {{action "logout" target="JustDive.Controllers.Identity"}}><i class="icon-off"></i> Déconnexion</a></li>
			{{else}}
				<li><a href="#" class="disabled"><i class="icon-refresh"></i> Synchroniser depuis Google</a></li>
				<li><a href="#" class="disabled"><i class="icon-off"></i> Déconnexion</a></li>
			{{/if}}
			<li class="divider"></li>
			<li><a href="#" {{action "clearLocalStorage" target="JustDive.Controllers.Welcome"}}><i class="icon-trash"></i> Vider le stockage local</a></li>
		</ul>
	</div>
{{/if}}
<div class="pull-right">
{{#if JustDive.monitor.is_online}}
	<span class="label label-success"><i class="icon-signal icon-white"></i></span>
{{else}}
	<span class="label label-info"><i class="icon-plane icon-white"></i></span>
{{/if}}
</div>