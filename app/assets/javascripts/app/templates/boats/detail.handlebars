<div class="panel right" id="content">
	<div class="navbar navbar-fixed-top sub-navbar right">
		<div class="navbar-inner">
			<div class="container-fluid">
				{{#if view.isEditing}}
					{{#if view.isCreating}}
					<div class="btn-group pull-left">
						<a class="btn  btn-inverse" href="#!club-admin/boats">Annuler</a>
					</div>
					{{else}}
					<div class="btn-group pull-left">
						<button class="btn btn-inverse" type="button" {{action stopEditMode}}>Annuler</button>
					</div>
					{{/if}}
					<div class="btn-group pull-right">
						<button class="btn btn-success" type="submit">Enregistrer</button>
					</div>
				{{else}}
					<div class="btn-group pull-left">
						<a class="btn" href="#!club-admin/boats"><i class="icon-chevron-left"></i>Bateaux</a>
					</div>
					<div class="btn-group pull-right">
						<button class="btn" {{action startEditMode}}><i class="icon-pencil"></i></button>
					</div>
				{{/if}}
				<span class="navbar-text">{{view.boat.name}}</span>
			</div>
		</div>
	</div>
	
	<div class="scrollable panel">
		<div class="content insideScrollablePanel">
			<div class="hero-unit">
				<h1>{{view.boat.name}}</h1>
				{{#if view.isEditing}}
					<div class="field">
						{{view Ember.TextField valueBinding="view.boat.name"  placeholder="Name" size="30"}}
					</div>
				{{/if}}

				<hr />
				<dl class="dl-horizontal">
					<dt>Id</dt>
					<dd>{{view.boat.id}}</dd>
					<dt>Créé le</dt>
					<dd>{{view.boat.created_at}}</dd>
					<dt>Modifié le</dt>
					<dd>{{view.boat.updated_at}}</dd>
				</dl>
			</div>
			<div class="actions"> 
				{{#if view.isEditing}}
					<button class="btn btn-danger" type="button" {{action destroyObject}}>Supprimer</button>
				{{/if}}
			</div>
		</div>
	</div>
</div>