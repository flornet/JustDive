<div class="navbar subnav">
	<div class="navbar-inner">
		<div class="container">
			<div class="btn-group pull-left">
				<a class="btn btn-inverse" href="#!club-admin/boats"><i class="icon-chevron-left icon-white"></i>Bateaux</a>
			</div>
			<ul class="nav pull-left">
				<li class="divider-vertical"></li>
				<li><span class="navbar-text">{{view.boat.name}}</span></li>
			</ul>
		</div>
	</div>
</div>

<div class="hero-unit">
	<h1>{{view.boat.name}}</h1>
	{{#if view.isEditing}}
		<div class="field">
			{{view Ember.TextField valueBinding="view.boat.name"  placeholder="Name" size="30"}}
		</div>
	{{/if}}

	<hr />
	<dl class="dl-horizontal">
		<dt>Id</dt>
        <dd>{{view.boat.id}}</dd>
		<dt>Créé le</dt>
        <dd>{{view.boat.created_at}}</dd>
		<dt>Modifié le</dt>
        <dd>{{view.boat.updated_at}}</dd>
    </dl>
</div>
<div class="actions"> 
	{{#if view.isEditing}}
		<button class="btn btn-danger" type="button" {{action "destroyObject"}}>Supprimer</button>
		<button class="btn" type="button" {{action "stopEditMode"}}>Annuler</button>
		<button class="btn btn-success" type="submit">Enregistrer</button>
	{{else}}
		<button class="btn btn-primary" type="button" {{action "startEditMode"}}>Modifier</button>
	{{/if}}
</div>
