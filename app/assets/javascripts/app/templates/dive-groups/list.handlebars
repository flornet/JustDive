{{#each view.boatDeparture.diveGroups}}
	<div class="scrollable-item">
		<div class="dive-group droppable" {{bindAttr data-dive-group-id="id"}}>
			{{view JustDive.Views.DiveGroups.Title diveGroupBinding="this"}}
			<div class="details">
				{{view JustDive.Views.DiveGroups.Detail diveGroupBinding="this" boatDepartureBinding="view.boatDeparture" diveEventBinding="view.diveEvent"}}
			</div>
			<ul class="nav nav-pills nav-stacked participants">
				{{#unless this.participants.length}}
					<li class="alert"><small>Aucun plongeur</small></li>
				{{/unless}}
				{{#each this.participants}}
					{{view JustDive.Views.DiveGroupParticipants.ListShow diveGroupBinding="view.diveGroup" boatDepartureBinding="view.boatDeparture" diveGroupParticipantBinding="this"}}
				{{/each}}
			</ul>
		</div>
	</div>
{{/each}}
