<div class="panel right" id="content">
	<div class="navbar navbar-fixed-top right">
		<div class="navbar-inner">
			<div class="container-fluid">
				<div class="btn-group pull-left">
					<a class="btn btn-inverse" href="#!club-admin/dive-roles"><i class="icon-chevron-left icon-white"></i>Roles</a>
				</div>
				<ul class="nav pull-left">
					<li class="divider-vertical"></li>
					<li><span class="navbar-text">{{view.diveRole.name}}</span></li>
				</ul>
			</div>
		</div>
	</div>

	<div class="scrollable panel">
		<div class="content insideScrollablePanel">
			<div class="hero-unit">
				<h1>{{view.diveRole.name}}</h1>
				{{#if view.isEditing}}
					<div class="field">
						{{view Ember.TextField valueBinding="view.diveRole.name"  placeholder="Name" size="30"}}
					</div>
				{{/if}}

				<hr />
				<dl class="dl-horizontal">
					<dt>Id</dt>
					<dd>{{view.diveRole.id}}</dd>
					<dt>Créé le</dt>
					<dd>{{view.diveRole.created_at}}</dd>
					<dt>Modifié le</dt>
					<dd>{{view.diveRole.updated_at}}</dd>
				</dl>
			</div>
			<div class="actions"> 
				{{#if view.isEditing}}
					<button class="btn btn-danger" type="button" {{action "destroyObject"}}>Supprimer</button>
					<button class="btn" type="button" {{action "stopEditMode"}}>Annuler</button>
					<button class="btn btn-success" type="submit">Enregistrer</button>
				{{else}}
					<button class="btn btn-primary" type="button" {{action "startEditMode"}}>Modifier</button>
				{{/if}}
			</div>
		</div>
	</div>
</div>