<div class="hero-unit">
	<h1>{{diveRole.name}}</h1>
	{{#if isEditing}}
		<div class="field">
			{{view Ember.TextField valueBinding="diveRole.name"  placeholder="Name" size="30"}}
		</div>
	{{/if}}

	<hr />
	<dl class="dl-horizontal">
		<dt>Id</dt>
        <dd>{{diveRole.id}}</dd>
		<dt>Créé le</dt>
        <dd>{{diveRole.created_at}}</dd>
		<dt>Modifié le</dt>
        <dd>{{diveRole.updated_at}}</dd>
    </dl>
</div>
<div class="actions"> 
	{{#if isEditing}}
		<button class="btn" type="button" {{action "destroy"}}>Annuler</button>
		<button class="btn btn-success" type="submit">Enregistrer</button>
	{{else}}
		<button class="btn btn-danger" type="button" {{action "diveRolesDestroy" target="JustDive.Controllers.ClubAdmin" context="diveRole"}}>Supprimer</button>
		<button class="btn btn-primary" type="button" {{action "diveRolesEdit" target="JustDive.Controllers.ClubAdmin" context="diveRole"}}>Modifier</button>
	{{/if}}
</div>
